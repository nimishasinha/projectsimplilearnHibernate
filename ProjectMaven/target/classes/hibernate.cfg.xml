<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">create</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property> 
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernateDemo?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin@123</property>           
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
           
         <mapping class="com.simplilearn.pojo.ClassRoomPOJO"/> 
        <mapping class="com.simplilearn.pojo.StudentPOJO"/>
        <mapping class="com.simplilearn.pojo.TeacherPOJO"/>
        <mapping class="com.simplilearn.pojo.SubjectPOJO"/>
     </session-factory>
 </hibernate-configuration>